<ul class="sidenav" id="mobile-demo">
    <li><a href="/leaderboard">Leaderboard</a></li>
    <li><a href="/logout">Logout</a></li>
</ul>

<div class="section white">
    <div class="row container">
        <div class="row">
            <div class="col s3"></div>
            <div class="col s7">
                <h4 class="center">Best Scores</h4>
                <ul>
                    {{#each highScores}}

                    <li class="high-score-li" data-id="{{id}}">
                        Score: {{score}} points
                        <button class="delete-score waves-effect btn-flat" data-id="{{id}}">
                            <i class="material-icons">close</i>
                        </button><br>
                        On: {{createdAt}}<br><br>
                    </li>
                    {{/each}}
                </ul>
            </div>
            <div class="col s2">
                <a class="waves-effect waves-light btn modal-trigger grey darken-3" href="#passwordModal">
                    <i class="material-icons">settings</i>
                </a>
            </div>
        </div>
    </div>
</div>

<div id="passwordModal" class="modal">
    <div class="modal-content">
        <h5>Change your password</h5>
        <form class="col s12" id="passwordForm">
            <div class="row">
                <div class="input-field col s12">
                    <input id="newPassword" type="password" class="validate">
                    <label class="active" for="password">New Password</label>
                </div>
            </div>
            <button class="btn waves-effect waves-light btn-small black" type="submit" name="action">Submit</button>
            <div id="alert">
                <p class="msg"></p>
            </div>  
        </form>
    </div>

    <div class="modal-footer">
        <a href="#!" class="modal-close waves-effect waves-green btn-flat">Back</a>
    </div>
</div>